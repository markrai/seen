{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Seen",
  "version": "0.8.0",
  "identifier": "com.seen",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Seen",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/seen-backend-x86_64-pc-windows-msvc.exe",
      "binaries/seen-backend-x86_64-unknown-linux-gnu",
      "binaries/seen-backend-aarch64-apple-darwin"
    ]
  },
  "plugins": {
    "shell": {
      "sidecar": true,
      "scope": [
        {
          "name": "binaries/seen-backend-x86_64-pc-windows-msvc.exe",
          "sidecar": true
        },
        {
          "name": "binaries/seen-backend-x86_64-unknown-linux-gnu",
          "sidecar": true
        },
        {
          "name": "binaries/seen-backend-aarch64-apple-darwin",
          "sidecar": true
        }
      ]
    }
  }
}
